<FlatList
  data={filteredQuizzes}
  renderItem={({ item }) => <QuizItem quiz={item} />}
  keyExtractor={(item) => item.id.toString()}
  ListEmptyComponent={<Text style={styles.noQuizzesText}>No quizzes found</Text>}
  contentContainerStyle={styles.quizList}
  removeClippedSubviews={true}          // Améliore les performances
  maxToRenderPerBatch={10}              // Limite le nombre d'éléments rendus par lot
  windowSize={5}                        // Réduit la fenêtre de rendu
  initialNumToRender={8}                // Limite le rendu initial
/>
